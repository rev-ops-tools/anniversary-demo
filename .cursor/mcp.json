{
    "mcpServers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        },
        "herd": {
            "command": "php",
            "args": [
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "env": {
                "SITE_PATH": "/Users/devon/Herd/anniversary-demo"
            }
        },
        "nightwatch": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://nightwatch.laravel.com/mcp"
            ]
        }
    }
}